<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#02B1EA"
    android:padding="30dp" >

    <ImageView
        android:id="@+id/imagezevenBottom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/imageZevenTop"
        android:layout_alignTop="@+id/imageZevenTop"
        android:layout_marginTop="26dp"
        android:src="@drawable/zevenbottomicon" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imagezevenBottom"
        android:layout_centerHorizontal="true"
        android:layout_centerInParent="true"
        android:layout_marginTop="27dp"
        android:orientation="horizontal" >
        
        <TextView
            android:id="@+id/txtZeven"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
           
            android:text="Zeven"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="#FFFFFF"
            android:textSize="40sp" />

        <TextView
            android:id="@+id/txtStat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
           
            android:text="Status"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="#0071B4"
            android:textSize="40sp" />

        
    </LinearLayout>

    <ImageView
        android:id="@+id/imageZevenTop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="90dp"
        android:src="@drawable/zeventopicon" />

</RelativeLayout><!-- From: file:/F:/My%20Stuff/Imp/Projects/Zevenseas/DailyStatusUpdaterAS/app/src/main/res/layout/splashscreen.xml -->